<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>View <%= class_.className %></title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <%- include('../navbar', { loggedIn, fullName }) %>
        <main class="container">
            <div class="w-50">
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Class Name</div>
                    <div class="col-8"><%= class_.className %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Created By</div>
                    <div class="col-8"><%= class_.createdBy %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Created At</div>
                    <div class="col-8"><%= class_.createdAt %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-4 fw-bold">Updated At</div>
                    <div class="col-8"><%= class_.updatedAt %></div>
                </div>
                <a href="/class/<%= class_.classId %>/edit">
                    <div class="btn btn-primary">Edit Class</div>
                </a>
            </div>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Student Id</th>
                        <th scope="col">Student Name</th>
                        <th scope="col">Student Gender</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach((student, idx) => { %>
                    <tr>
                        <th scope="row"><%= idx+1 %></th>
                        <th scope="col"><%= student.StudentID %></th>
                        <th scope="col"><%= student.StudentName %></th>
                        <th scope="col"><%= student.StudentGender %></th>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% if (students.length === 0) { %>
            <p class="text-center mt-5">Student list is empty!</p>
            <% } %>
        </main>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
